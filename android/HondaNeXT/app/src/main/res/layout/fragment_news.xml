<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".PodcastFrag">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEWS"
        android:background="@color/colorPrimary"
        android:padding="10sp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10sp"
                app:cardCornerRadius="10sp"
                android:elevation="20sp"

                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="20sp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/newss"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The protest against the Centre's new farm laws looks set to intensify further as more farmers are expected to join the ongoing agitation at Delhi's border points to press for their demands. AFP"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="Read More....."/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>